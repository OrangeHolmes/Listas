
AlturaNodo(Arbol a, Nodo buscado) {
	if (!a.vacia()) {
		cola.Iniciar()
	    cola.encolar((a.raiz, 0))
		totalNiveles = 0
		altura = 0
		while (!c.vacia()) {
			parNodo = c.desencolar()
			if (totalNiveles < parNodo.nivel) {
				totalNiveles = parNodo.nivel
			}
			nodoHijo = a.HijoMasIzquierdo(parNodo.nodo)
			while (nodoHIjo != NULL) {
				c.encolar(NodoHIjo, parNodo.nivel + 1)
				if (buscado = nodoHijo) {
					altura = parNodo.nivel + 1
				}
				nodoHijo = a.HermanoDerecho(nodoHijo)
			}
		}
		cola.Destruir()		
		return totalidadNiveles - altura
	}
}


ProfundidadNodo(Arbol a, Nodo buscado) {
	if (!a.vacia()) {
		cola.Iniciar()
		cola.encolar((a.raiz, 0))
		profundidad = 0
		while (!c.vacia()) {
			parNodo = c.desencolar()
			nodoHijo = a.HijoMasIzquierdo(parNodo.nodo) 
			while (nodoHIjo != NULL) {
				c.encolar(NodoHIjo,parNodo.nivel +1)
				if (buscado = nodoHijo) {
					profundidad = parNodo.nivel + 1
				}
				nodoHijo = a.HermanoDerecho(nodoHijo)
			}
		}
		cola.Destruir()
	}
}



